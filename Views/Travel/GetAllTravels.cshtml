@model TourismWebApp.ViewModels.TravelsViewModel

<div class="container-fluid">
    <div class="row">
        @foreach (var travel in Model.Travels)
        {
            <div class="col-md-4">
                <h4 style="text-align:center">@travel.Name</h4>
                <a href="/Travel/GetTravelById/@travel.Id">
                    <img class="img-thumbnail col-md-12" src="@travel.ImgUrl" />
                </a>
                <a href="/TourismType/GetTTByName?name=@travel.TourismTypeName">
                    <h4 style="text-align:center">Тип путешествия: @travel.TourismTypeName</h4>
                </a>
                <a href="TravelOrganizer/GetTOByName?name=@travel.TravelOrganizerName">
                    <h4 style="text-align:center">Организатор: @travel.TravelOrganizerName</h4>
                </a>
                <h6>@travel.Desc</h6>
                <br />
                <br />
            </div>
        }
    </div>
</div>

