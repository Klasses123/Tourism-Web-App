@model TourismWebApp.ViewModels.TourismTypesViewModel

<div class="container-fluid content-container">
    <div class="row">
        @foreach (var tourismType in Model.TourismTypes)
        {
            <div class="col-md-4">
                <h4 style="text-align:center">@tourismType.Name</h4>
                <a href="/TourismType/GetTTById/@tourismType.Id" style="padding: 0; margin: 0">
                    <img src="@tourismType.ImgUrl" />
                </a>
                <p>@tourismType.Desc</p>
                <br />
                <br />
            </div>
        }
    </div>
</div>
